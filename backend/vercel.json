{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "timeout": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "main.py",
      "headers": {
        "Access-Control-Allow-Origin": "http://localhost:3000",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "*"
      }
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key"
  }
}